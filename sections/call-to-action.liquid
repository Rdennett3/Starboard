<div class="ctaouter">
    <h2> {{ section.settings.text-box }} </h2>
    <a href="{{section.settings.link}}">
        {{section.settings.linktext}}
    </a>
</div>

{% stylesheet %}
  .ctaouter{
    width:100%;
    height:auto;
    display:flex;
    align-items:center;
    justify-content:center;
    background:red;
  }
{% endstylesheet %}

{% schema %}
{
    "name": "Call to action",
    "settings": [
        {
            "id": "text-box",
            "type": "text",
            "label": "Heading",
            "default": "Title"
        },
        {
            "id": "link",
            "type": "url",
            "label": "Link URL"
        },
        {
            "id": "linktext",
            "type": "text",
            "label": "Link Text",
            "default": "Click Here"
        }
    ]
    ,
    "presets": [
        {
            "name": "Call to Action",
            "category": "Promotional"
        }
    ]
}
{% endschema %}